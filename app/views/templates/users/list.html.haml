%div{ "main-header" => "", "item" => "1" }
.container
  .my-control
    %button.btn.btn-large.btn-default#btnNewUser{ :type => "submit", "ng-click" => "createUser()" }
      %span.glyphicon.glyphicon-plus.blue
      New User
    .lists
      %table.table.table-striped.table-bordered
        %thead
          %tr
            %th Name
            %th Email
            %th Role
            %th Actions
        %tbody{"ng-repeat" => "user in users"}
          %tr
            %th {{ user.user.username }}
            %th {{ user.user.email }}
            %th {{ user.user.role }}
            %th 
              %a{ "ng-href" => '#/users/{{ user.user.id }}/edit' } Edit
              %a{ "ng-click" => 'deleteUser(user.user.id)' } Delete            
